                      <h3>IMAGENES ALOJADAS DE FORMA LOCAL</h3>
                      <!-- Gallery  -->
                        <div class="row">
                        <section class="row" id="galeriaLocal">                
                            
                        </section>
                        </div>
                        <h3>IMAGENES ALOJADAS EN CLOUDINARY</h3>
                         <!-- Gallery  -->
  
  
                        <div class="row">
                        <section class="row mt-5" id="galeriaCloud">                
                            
                        </section>
                      </div>
        
                          </div>
                        </div>
                        
                      </div>



      
               </div>






            
               



        </main>
    </div>
