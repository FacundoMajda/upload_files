<%- include('../partials/header.ejs') ;%>

<body class="h-100 d-flex flex-column">
    <%- include('../partials/nav'); %>
    <div class="container-fluid py-5 px-md-5 col">
        <header class="d-flex align-items-center justify-content-between">
            Nueva Imagen
        </header>
        <main class="col h-100">
            <div class="row">
                <div class="col-md-6">
                    <form class="d-flex flex-column gap-3" id='uploadForm' enctype="multipart/form-data"
                        action="/upload/local" method="POST">
                        <h3>Subir Imagen Local</h3>
                        <input type="file" name="image" id="image" accept="image/jpeg, image/png, image/jpg" />
                        <input class="btn btn-primary w-50" type='submit' value='Subir Localmente' />
                        <p id="localValidationErrors"></p>
                    </form>
                </div>
                <div class="col-md-6">
                    <h3>Subir Imagen a Cloudinary</h3>
                    <p>Usa el widget para subir una imagen a Cloudinary</p>
                    <div><button id="upload_widget" class="btn btn-primary">Subir a Cloudinary</button></div>
                    <div><img id="uploaded" /></div>
                    <h4>Respuesta de Subida:</h4>
                    <pre class="data" id="uwdata"></pre>
                </div>
            </div>

            <!-- cloudinary upload widget -->
            <script src="https://widget.cloudinary.com/v2.0/global/all.js" type="text/javascript"></script>

            <!-- local upload instantiation -->
            <script src="/js/upload-cloud.js" type="text/javascript"></script>
        </main>
    </div>
    <%- include('../partials/footer'); %>
</body>

</html>
